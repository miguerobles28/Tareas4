#include <iostream>
char unacadena[] = "Lenguajes de Programacion ITM";
char otracadena[] = "ITM";
int buscaString();
using namespace std;

int main()
{
    buscaString();
    return 0;
}

int buscaString()
{
    char *bigarray;
    char* smallarray;
    int cont=0;
    bigarray = &unacadena[0];
    smallarray = &otracadena[0];

    for(int i = 0; i < sizeof(unacadena); i++){
       if(*(bigarray + i) == *(smallarray)){
            cont++;
          for(int j=0; j<sizeof(otracadena); j++){
              if(*(bigarray + i + j) == *(smallarray + j)){
                cont++;
               }
              if(cont==sizeof(otracadena)){
                  cout<<"Una maravilla"<<"\n";
                  cont = 0;
              }
          }

          cont=0;
       }
   }
}
